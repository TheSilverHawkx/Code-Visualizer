{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch CLI",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/dist/index.js",
            "preLaunchTask": "Build Project",
            "args": ["--folder-path", "O:\\Programming\\Javascript\\Code Visualizer\\examples\\node-hello"], // Update with real path or remove
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Jest Tests",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest.js"
            },
            "env": {
                "NODE_ENV": "test"
            }
        }
    ]
}
